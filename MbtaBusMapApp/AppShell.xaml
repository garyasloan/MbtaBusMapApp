<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MbtaBusMapApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.SegmentedControl;assembly=Syncfusion.Maui.Toolkit"
    xmlns:pages="clr-namespace:MbtaBusMapApp"
    xmlns:local="clr-namespace:MbtaBusMapApp"
    Shell.FlyoutBehavior="Flyout"
    Title="MbtaBusMapApp">

    <ShellContent
        Title="MBTA Bus Routes"
        ContentTemplate="{DataTemplate local:MbtaMapPage}"
        Route="main" />

    <ShellContent
    Title="About"
    ContentTemplate="{DataTemplate pages:AboutPage}"
    Route="about" />
</Shell>
