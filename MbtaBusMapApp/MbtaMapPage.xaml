<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="MbtaBusMapApp.MbtaMapPage">

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto"
      Padding="20"
      RowSpacing="10">

        <!-- Row 0: Buttons Grid with two columns -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" ColumnSpacing="10">
            <Button x:Name="RoutePickerButton"
                Text="Select Route"
                FontSize="14"
                HorizontalOptions="Fill"
                Clicked="OnShowRoutePickerClicked"
                Grid.Column="0" />

            <Button x:Name="ShowAllBusesButton"
                Text="Reset Route View"
                FontSize="14"
                IsEnabled="False"
                IsVisible="False"
                Clicked="OnShowAllBusesClicked"
                HorizontalOptions="Center"
                Grid.Column="1" />
        </Grid>

        <!-- Row 2: Selected Route Label -->
        <Label x:Name="SelectedRouteLabel"
               Grid.Row="2"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               LineBreakMode="WordWrap"
               MaxLines="2"
               FontSize="15"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center" />

        <!-- Hidden Picker -->
        <Picker x:Name="RoutePicker"
                Title="Select Route"
                SelectedIndexChanged="OnRouteSelected"
                IsVisible="False" />

        <!-- Row 3: Map container with overlay label -->
        <Grid Grid.Row="3">
            <maps:Map x:Name="BusMap"
                      IsScrollEnabled="True"
                      IsZoomEnabled="True" />

            <Grid InputTransparent="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Label x:Name="NoBusesLabel"
                       Grid.Row="1"
                       Text="No active buses on this route."
                       TextColor="Red"
                       FontSize="18"
                       BackgroundColor="White"
                       Padding="10"
                       HorizontalOptions="Center"
                       VerticalOptions="Start"
                       IsVisible="False" />
            </Grid>
        </Grid>

        <!-- âœ… New Row 4: Refresh Button under map -->
        <Button x:Name="RefreshButton"
                Grid.Row="4"
                Text="Refresh Bus View"
                FontSize="14"
                IsEnabled="False"
                IsVisible="False"
                Clicked="OnRefreshClicked"
                HorizontalOptions="Center" />

    </Grid>
</ContentPage>
