<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="MbtaBusMapApp.MbtaMapPage">

    <Grid RowDefinitions="Auto,Auto,Auto,*"
          Padding="20"
          RowSpacing="10">

        <!-- Row 0: Buttons Grid -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" ColumnSpacing="10">
            <Button x:Name="RoutePickerButton"
                    Text="Select Route"
                    FontSize="14"
                    HorizontalOptions="Fill"
                    Clicked="OnShowRoutePickerClicked"
                    Grid.Column="0" />

            <Button x:Name="RefreshButton"
                    Text="Refresh Bus Locations"
                    FontSize="14"
                    IsEnabled="False"
                    IsVisible="False"
                    Clicked="OnRefreshClicked"
                    Grid.Column="1"
                    HorizontalOptions="End" />
        </Grid>

        <!-- Row 1: Show All Buses -->
        <Button x:Name="ShowAllBusesButton"
                Grid.Row="1"
                Text="Show All Buses On Route (Zoom Out)"
                FontSize="14"
                IsEnabled="False"
                IsVisible="False"
                Clicked="OnShowAllBusesClicked"
                HorizontalOptions="Center" />

        <!-- Row 2: Selected Route Label -->
        <Label x:Name="SelectedRouteLabel"
               Grid.Row="2"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               LineBreakMode="WordWrap"
               MaxLines="2"
               FontSize="14"
               HorizontalTextAlignment="Center" />

        <!-- Hidden Picker -->
        <Picker x:Name="RoutePicker"
                Title="Select Route"
                SelectedIndexChanged="OnRouteSelected"
                IsVisible="False" />

        <!-- Row 3: Map container with overlay label -->
        <Grid Grid.Row="3">
            <maps:Map x:Name="BusMap"
                      IsScrollEnabled="True"
                      IsZoomEnabled="True" />

            <Grid InputTransparent="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Label x:Name="NoBusesLabel"
                       Grid.Row="1"
                       Text="No buses currently active for the route selected."
                       TextColor="Red"
                       FontSize="18"
                       BackgroundColor="White"
                       Padding="10"
                       HorizontalOptions="Center"
                       VerticalOptions="Start"
                       IsVisible="False" />
            </Grid>
        </Grid>
    </Grid>
</ContentPage>
